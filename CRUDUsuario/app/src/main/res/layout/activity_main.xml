<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.crudusuario.MainActivity">

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_digitar"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColorHint="#070FCB" />

    <EditText
        android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_digitar"
        android:ems="10"
        android:hint="Login"
        android:inputType="textEmailAddress"
        android:textColorHint="#070FCB" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_digitar"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textEmailAddress"
        android:textColorHint="#070FCB" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="590dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:layout_marginTop="88dp"
            android:background="@drawable/botao_util"
            android:text="Salvar"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/btPesq"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btPesq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/botao_util"
            android:text="Pesquisar"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btExcluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="68dp"
            android:background="@drawable/botao_util"
            android:text="Excluir"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/btSinc"
            app:layout_constraintHorizontal_bias="0.962"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btSalvar" />

        <Button
            android:id="@+id/btSinc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            android:background="@drawable/botao_util"
            android:text="Sincronizar"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/btPesq"
            tools:layout_editor_absoluteX="236dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>



